/* Style sheet created by: Yiokling Chu, 4/1/22 */

/* Style for body */
body {
	background-color: #FFFFFF;
}

/* Style for container centers the page and sets the element width */
#container {
	width: 100%;
	margin-left: auto;
	margin-right: auto;
}

/* Style for the nav specifies text properties */
nav {
	font-family: Georgia, "Times New Roman", serif;
	font-size: 0.9em; 
	font-weight: bold; 
	justify-content: space-between;
	text-transform: uppercase;
}

/* Style specifies padding and margins for unordered list */
nav ul {
	padding: 0.5em;
	margin-top: 0.5em; 
	margin-bottom: 0.5em;
}

/* Style for nav li */
nav li { 
	list-style-type: none;
	margin: 0.3em;
	padding: 0.4em;
	display: inline-block;
}

/* Style changes navigation link */
nav li a {
	color: #000000;
	text-decoration: none;
}

/* Style for the main element*/
main {
	display: block;
	font-family: Georgia, "Times New Roman", serif;
	font-size: 1em;
	margin-top: 1.5em; 
	padding: 1em;
	background-color: #6279B8;
	border-top: solid 0.2em #6279B8;
	border-bottom: solid 0.2em #6279B8;
	align-items: center;
	justify-content: center;
}

/* Style for footer*/
footer {
	font-size:0.9em;
	text-align: center; 
	margin-top: 2em;
	background-color: #2F3C7E;
	border-top: solid 0.2em #2F3C7E;
	border-bottom: solid 0.2em #2F3C7E;
	color: #FFFFFF;
}

/* Style for footer achor*/
footer a{
	color: #FFFFFF;
	text-decoration: none;
}

/* Style for h1, h3*/
h1, h3 {
	color: #FFFFFF;
}

/* Style paragraph in main, Style for paragraph achor, and  Style for achor in main*/
main p, main a, main p a, main ul{
	color: #FFFFFF;
}

/* Style for h2 in main*/
main h2 {
	color: #FFFFFF;
	text-align: center;
}

/* Center */
.center {
	display: block;
	margin-left: auto;
	margin-right: auto;
}

/* Style for abut page text*/
.about-text {
    color: #000000;
    font-size: 18px;
    text-align: left;
}

/*Style about column*/
.about-column {
    float: left;
    width: 33.33%;
}
  
/* Clear floats after the columns */
.about-row:after {
    content: "";
    display: table;
    clear: both;
}

/*Style section*/
section {
	display: block;
	font-family: Georgia, "Times New Roman", serif;
	font-size: 1em;
	margin-top: 1.5em; 
	padding: 1em;
	align-items: center;
	justify-content: center;
}

/*Style h1 in Section*/
section h1{
	color: #000000;
}

/*Projects Wrapper*/
.projects-wrapper {
    width:100%;
    text-align:center;
    justify-content: center;
    align-items: center;
	display: table;
    clear: both;
}

/*Style img2*/
.img2{
	margin-left: 30em;
	margin-top: 5em;
}

/*Style img3*/
.img3{
	margin-left: 5em;
}
